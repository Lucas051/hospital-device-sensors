@{
    //Layout = null;
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Sessions", FormMethod.Post))
{
    <div class="d-flex justify-content-center align-items-center flex-column">

        <h2 class="text-center mt-5">Iniciar Sesión</h2>

        <div class="form-outline mb-4 col-lg-8 col-md-10 col-sm-12">
            <label class="form-label" for="nomUsu">Usuario: </label>
            <input type="text" name="nomUsu" class="form-control" />
        </div>
        <div class="form-outline mb-4 col-lg-8 col-md-10 col-sm-12">
            <label class="form-label" for="contra">Contraseña: </label>
            <input type="password" name="contra" class="form-control" />
        </div>

        <button type="submit" value="Login" class="btn btn-primary btn-block mb-4 col-lg-6 col-md-8 col-sm-10">Ingresar</button>
    </div>
}
